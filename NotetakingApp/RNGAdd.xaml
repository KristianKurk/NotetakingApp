<Page x:Class="NotetakingApp.RNGAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NotetakingApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RNGAdd">
    
    
   


    <StackPanel >
            
        <!--Text Boxes-->
       
            <StackPanel Background="#5e4d4d" Margin="0,20,0,20">

            <Border  Height="50" Margin="20"  BorderThickness="1" 
                         
                         CornerRadius="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >
                        <GradientStop Color="#ffe5cf" Offset="0.0"/>
                        <GradientStop Color="#b38d6d" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <TextBlock 
            Margin="0,20,0,0"
            HorizontalAlignment="Center" 
             
            Text="Data should be seperated by commas."/>
            </Border>
            <TextBlock 
             Margin="0,0,0,20"
            HorizontalAlignment="Center" 
              
            Text="Example: John,Jane,Dad,1,3,5"/>
          
        </StackPanel>
       
        <TextBox Name="rngTitle"></TextBox>
        <!--Text Box-->

        <TextBox HorizontalContentAlignment="Center" Name="rngTB" Height="70">
            <TextBox.Style>
                <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <Style.Resources>
                        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Center" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
                                <Label Content="Start Typing Here!" Foreground="LightGray" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="#f5d2b5" />
                        </Trigger>
                        
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <!--Save Button-->
        <Button  
           
            Name="saveText"
                 Content="Save Data" 
                 Height="40"  
                 Width="80"
                 ClickMode="Press" 
                 Click="SaveText" 
                 
                 Margin="0,20,0,20">
            
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#ffe5cf"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#debb9e"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
        </Button>
    </StackPanel>
</Page>
