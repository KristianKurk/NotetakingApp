<Page x:Class="NotetakingApp.RNGAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NotetakingApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RNGAdd">
     
    
    
    <StackPanel >
            
        <!--Text Boxes-->
        <StackPanel Background="#5e4d4d" Margin="0,20,0,20">
            <TextBlock 
            Margin="0,20,0,0"
            HorizontalAlignment="Center" 
             
            Text="Data should be seperated by commas."/>
        <TextBlock 
             Margin="0,0,0,20"
            HorizontalAlignment="Center" 
              
            Text="Example: John,Jane,Dad,1,3,5"/>
        </StackPanel>

        <TextBox Name="rngTitle"></TextBox>
        <!--Text Box-->

        <TextBox HorizontalContentAlignment="Center" Name="rngTB" Height="70">
            <TextBox.Style>
                <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <Style.Resources>
                        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Center" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
                                <Label Content="Start Typing Here!" Foreground="LightGray" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="#f5d2b5" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <!--Save Button-->
        <Button  
                 Name="saveText"
                 Content="Save Data" 
                 Height="40"  
                 Width="80"
                 ClickMode="Press" 
                 Click="SaveText" 
                 Background="#ffe5cf" 
                 Margin="0,20,0,20"/>


    </StackPanel>
</Page>
