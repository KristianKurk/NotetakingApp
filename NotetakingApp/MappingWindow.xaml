<Page x:Class="NotetakingApp.MappingWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NotetakingApp"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="MappingWindow"
      
      >
    <!--ShowsNavigationUI="false" can go in the page oject-->


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Content-->

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5.5*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>

            <!--Left Content-->
            <Grid Background="Brown" Grid.Column="0" 
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  >

                <!--Map Goes Here-->
                
            </Grid>

            <!--Right Action/Nav Bar-->
            <Grid  Background="Beige"  Grid.Column="1">

                <Grid.RowDefinitions>
                    
                    <RowDefinition Height="*"/>
 
                </Grid.RowDefinitions>

                <Grid  Grid.Row="0" VerticalAlignment="Stretch" Height="Auto" Margin="0,0,0,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>


                    </Grid.RowDefinitions>

                    <Button Name="addMap" Content="Add Map" Grid.Row="0" Height="40" Margin="10,20,10,20"/>
                    <Button Name="addPin" Content="Add Pin" Grid.Row="1"  Height="40" Margin="10,20,10,20"/>
                     
                    <!--Border Surrounds Row 2,3,4-->
                    <Border BorderThickness="1" BorderBrush="Black" Grid.Row="2" Grid.RowSpan="3" Margin="5">
                    </Border>

                    <Label 
                           Name="pinName"
                           Background="Gray"
                           Content="Pin Name"
                           Grid.Row="2" 
                           Margin="10,10,10,10" 
                           HorizontalAlignment="Center" 
                           Width="100" 
                           HorizontalContentAlignment="Center"/>

                    <Button Name="pinNote" Content="Link/Delete Note" Grid.Row="3" Margin="10,5,10,20"/>
                    <Button Name="pinDelete"
                            Content="Delete Pin" 
                            Grid.Row="4" 
                            Margin="10,5,10,20"
                            Background="Red"/>

                    <Button Name="mapReport" Content="Report" Grid.Row="5"  Height="40" Margin="10,20,10,5"/>
                    <Button Name="mapPopup" Content="Pop-up" Grid.Row="6"  Height="40" Margin="10,5,10,20"/>
                  

                </Grid>
            </Grid>

        </Grid>



    </Grid>
</Page>
