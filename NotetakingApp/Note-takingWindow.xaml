<Page x:Class="NotetakingApp.Note_takingWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NotetakingApp"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Note_takingWindow"
      
      >
    




    <!--Content-->

    <Grid DockPanel.Dock="Top"  >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5.5*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>


        <!--Left Content-->
        <StackPanel Background="Brown" Grid.Column="0" 
                  
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  >
        
            <!--Content Goes Here-->
            
        </StackPanel>

        <!--Right Action/Nav Bar-->



        <Grid  VerticalAlignment="Stretch"  Margin="0,0,0,0" HorizontalAlignment="Stretch" Grid.Column="1"
                       Background="Beige"
                       Height="750"
                       >

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>


            </Grid.RowDefinitions>

            <Button Name="addCategory" Content="Add Category" Grid.Row="0" Height="40" Margin="10,20,10,20"/>
            <Button Name="addNote" Content="Add Note" Grid.Row="1"  Height="40" Margin="10,20,10,20"/>

            <!--Border Surrounds Row 2,3,4-->
            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="2" Grid.RowSpan="3" Margin="5">
            </Border>

            <Label 
                           Name="noteName"
                           Background="Gray"
                           Content="Note Name"
                           Grid.Row="2" 
                           Margin="10,10,10,10" 
                           HorizontalAlignment="Center" 
                           Width="200" 
                           Height="25"
                           HorizontalContentAlignment="Center"/>

            <Button Name="noteEdit" Content="Edit/View Note" Grid.Row="3" Margin="10,5,10,20" Height="25"/>
            <Button Name="noteDelete"
                            Content="Delete Note" 
                            Grid.Row="4" 
                            Margin="10,5,10,20"
                            Height="25"
                            Background="Red"/>

            <Button Name="noteReport" Content="Report" Grid.Row="5"  Height="50" Margin="10,20,10,5"/>
            <Button Name="notePopup" Content="Pop-up" Grid.Row="6"  Height="50" Margin="10,5,10,20"/>


        </Grid>
    </Grid>




</Page>
