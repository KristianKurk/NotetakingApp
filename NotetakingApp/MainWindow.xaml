<Window x:Class="NotetakingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotetakingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080"
        
        >
    <StackPanel>

        <!--Navigation-->

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Note-taking App"/>
            <Button Name="mapNavButton" Grid.Column="1" Content="Mapping" Click="BtnClickMap" ClickMode="Press"/>
            <Button Name="noteNavButton" Grid.Column="2" Content="Note-taking" ClickMode="Press"/>
            <Button Name="rngNavButton" Grid.Column="3" Content="RNG Utilities" ClickMode="Press"/>
            <Button Name="importNavButton" Grid.Column="4" Content="Import" ClickMode="Press"/>

        </Grid>

        <!--Frame-->
        <Frame NavigationUIVisibility="Hidden" Name="main"></Frame>

    </StackPanel>
</Window>
