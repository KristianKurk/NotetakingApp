<Page x:Class="NotetakingApp.RNGWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NotetakingApp"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RNGWindow"
      
      >





    <!--Content-->

    <Grid DockPanel.Dock="Top"  >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5.5*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="1">
        <!--Left Content-->
        <StackPanel Background="SaddleBrown" Grid.Column="0" 
                  
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  >

            <!--Content Goes Here-->
            <TextBlock 
                FontSize="35"
                Height="50"
                Name="dataTitle"
                Background="DarkOliveGreen" 
                Text="Data Lists" 
                TextAlignment="Center"></TextBlock>

        </StackPanel>
            </Border>
        <!--Right Action/Nav Bar-->


        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1">
            <Grid  VerticalAlignment="Stretch"  Margin="0,0,0,0" HorizontalAlignment="Stretch" Grid.Column="1"
                       Background="Beige"
                       Height="750"
                       >

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>


                </Grid.RowDefinitions>

                <Button Name="addData" Content="Add Data List" Grid.Row="0" Height="40" Margin="10,20,10,20"/>
                <Button Name="generateRNG" Content="Generate Randomized Data" Grid.Row="1"  Height="40" Margin="10,20,10,20"/>


                <Button Name="RNGReport" Content="Report" Grid.Row="5"  Height="50" Margin="10,20,10,5"/>
                <Button Name="RNGPopup" Content="Pop-up" Grid.Row="6"  Height="50" Margin="10,5,10,20"/>


            </Grid>
        </Border>
    </Grid>




</Page>
